@{
	ViewData["Title"] = "Home Page";
}

	<link rel="stylesheet" href="~/css/indexPage.css" asp-append-version="true" />

<main>
	<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false" style="left:-18.0vw;min-width: 99.1vw; display:block;">
	<div class="carousel-indicators">
		<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
		<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
		<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
	</div>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<a href="@Url.Action("MoreInfoAboutMovie", "Movie", new {id=278})">
				<img src="https://image.tmdb.org/t/p/original/kXfqcdQKsToO0OUXHcrrNCHDBzO.jpg" class="d-block w-100" style="height: 84.1vh;" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<p class="text_style">Keep a list of what you want to watch</p>
					<p class="title_style">The Shawshank Redemption</p>
				</div>
			</a>
		</div>
		<div class="carousel-item">
			<a href="@Url.Action("MoreInfoAboutMovie", "Movie", new {id=289})">
				<img src="https://image.tmdb.org/t/p/original/bln0pnieTax3KrEpG5ZjN3fi1sw.jpg" class="d-block w-100" style="height: 85vh;" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<p class="text_style">Keep a list of what you want to watch</p>
					<p class="title_style">Casablanca</p>
				</div>
			</a>
		</div>
		<div class="carousel-item">
			<a href="@Url.Action("MoreInfoAboutMovie", "Movie", new {id=4935})">
				<img src="https://image.tmdb.org/t/p/w1280/iuFbU5jiNh8DAxLBGifZCvv3KmB.jpg" class="d-block w-100" style="height: 85vh;" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<p class="text_style">Keep a list of what you want to watch</p>
					<p class="title_style">Howl's Moving Castle</p>
				</div>
			</a>
		</div>
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>
</main>

