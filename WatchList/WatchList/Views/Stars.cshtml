<div class="star-source">
	<svg>
		<linearGradient x1="50%" y1="5.41294643%" x2="87.5527344%" y2="65.4921875%" id="grad">
			<stop stop-color="#ffff00" offset="0%"></stop>
			<stop stop-color="#ffff00" offset="0%"></stop>
			<stop stop-color="#ffff00" offset="0%"></stop>
		</linearGradient>
		<symbol id="star" viewBox="153 89 106 108">
			<polygon id="star-shape" stroke="url(#grad)" stroke-width="5" fill="currentColor" points="206 162.5 176.610737 185.45085 189.356511 150.407797 158.447174 129.54915 195.713758 130.842203 206 95 216.286242 130.842203 253.552826 129.54915 222.643489 150.407797 235.389263 185.45085"></polygon>
		</symbol>
	</svg>

</div>

@model WatchList.Models.Rating
<input id="TMDB" value="@Model.IdTMDB" hidden />
<input id="media_type" value="@Model.type" hidden />
<div class="modal-content">
	<div class="modal-header">
		<h4 class="modal-title">Rate</h4>
	</div>
	<div class="modal-body">

		<div class="star-container">

			<input type="radio" name="star" id="five" value="5" onclick="rate(this)">
			<label for="five">
				<svg class="star">
					@if (@Model.rate >= 5)
					{
						<use xlink:href="#star" color="#c4c468" />
					}
					<use xlink:href="#star" />

				</svg>
			</label>
			<input type="radio" name="star" id="four" value="4" onclick="rate(this)">
			<label for="four">
				<svg class="star">
					@if (@Model.rate >= 4)
					{
						<use xlink:href="#star" color="#c4c468" />
					}
					<use xlink:href="#star" />

				</svg>
			</label>
			<input type="radio" name="star" id="three" value="3" onclick="rate(this)">
			<label for="three">
				<svg class="star">
					@if (@Model.rate >= 3)
					{
						<use xlink:href="#star" color="#c4c468" />
					}
					<use xlink:href="#star" />

				</svg>
			</label>
			<input type="radio" name="star" id="two" value="2" onclick="rate(this)">
			<label for="two">
				<svg class="star">
					@if (@Model.rate >= 2)
					{
						<use xlink:href="#star" color="#c4c468" />
					}
					<use xlink:href="#star" />

				</svg>
			</label>
			<input type="radio" name="star" id="one" value="1" onclick="rate(this)" checked>
			<label for="one">
				<svg class="star">
					@if (@Model.rate >= 1)
					{
						<use xlink:href="#star" color="#c4c468" />
					}
					<use xlink:href="#star" />

				</svg>
			</label>

		</div>
	</div>
