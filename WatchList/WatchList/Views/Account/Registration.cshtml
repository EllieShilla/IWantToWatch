@model RegisterViewModel
@{
	string message = ViewData["LogOrPass"] as string;
}
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/LogIn.css" asp-append-version="true" />
</head>

<main>
		<div style="margin-bottom:59.7%;">
	<form method="post" asp-controller="Account" asp-action="Registration" class="logIn_form registration_form_size">
		<div asp-validation-summary="ModelOnly"></div>

		<div class="form__group">
			<input asp-for="Login" class="input_style" type="text" placeholder="Login" />
			<label asp-for="Login" class="label_logIn">Login</label>
			<span asp-validation-for="Login"></span>
		</div>
		<div class="form__group">
			<input asp-for="Password" class="input_style" type="password" placeholder="●●●●●●●●●" />
			<label asp-for="Password" class="label_logIn">Password</label>
			<span asp-validation-for="Password"></span>
		</div>
		<div class="form__group">
			<input asp-for="PasswordConfirm" class="input_style" type="password" placeholder="●●●●●●●●●" />
			<label asp-for="PasswordConfirm" class="label_logIn">Repeat Password</label>
			<span asp-validation-for="PasswordConfirm"></span>

		</div>

		<div class="form__group">
			<input asp-for="Email" class="input_style" type="email" placeholder="Email" />
			<label asp-for="Email" class="label_logIn">Email</label>
			<span asp-validation-for="Email"></span>

		</div>
		<div>
			<input type="submit" value="Join" class="LogIn_button" />
		</div>

		@if (message != null && message.Length > 1)
		{
			<br />
			<p class="logIn_error">@message</p>
		}
	</form>


	</div>
</main>
